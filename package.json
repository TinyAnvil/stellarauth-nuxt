{
  "name": "stellarauth",
  "description": "Authenticate using your Stellar account",
  "author": "Tyler van der Hoeven",
  "version": "0.0.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev:test": "NUXT_ENV_NETWORK=test nuxt",
    "dev:public": "NUXT_ENV_NETWORK=public nuxt",
    "build": "nuxt build",
    "deploy": "yarn build && surge ./dist https://demo.stellarauth.com",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.stellarauth",
    "directories": {
      "output": "platforms"
    },
    "files": [
      "electron/main.js",
      "dist/**/*"
    ],
    "mac": {}
  },
  "dependencies": {
    "@ledgerhq/hw-app-str": "^4.62.0",
    "@ledgerhq/hw-transport-webauthn": "^4.62.0",
    "@nuxtjs/axios": "^5.5.4",
    "bluebird": "^3.5.5",
    "copy-to-clipboard": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash-es": "^4.17.11",
    "moment": "^2.24.0",
    "nuxt": "^2.8.1"
  },
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.43.0",
    "node-sass": "^4.12.0",
    "path": "^0.12.7",
    "sass-loader": "^7.1.0",
    "url": "^0.11.0"
  }
}
